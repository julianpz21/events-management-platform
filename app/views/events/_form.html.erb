<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" >
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :date,  class: "form-label" %>
    <%= form.date_field :date, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :place, class: "form-label" %>
    <%= form.text_field :place, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :capacity, class: "form-label" %>
    <%= form.number_field :capacity, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category, Event.categories.keys.map { |category| [category.humanize, category] }, { prompt: "Select a category" }, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= form.submit "Update Event", class: "btn btn-primary" %>
  </div>
<% end %>
